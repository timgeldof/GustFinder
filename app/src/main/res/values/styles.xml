<resources>

    <style name="GustTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkBlue</item>
        <item name="colorAccent">@color/colorLightBlue</item>
    </style>
    <style name="smallText">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center|center_horizontal</item>

    </style>
    <style name="bigText">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center|center_horizontal</item>
    </style>
    <style name="mediumText">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center|center_horizontal</item>
    </style>
    <style name="lightBlueBackGround">
        <item name="android:background">@color/colorLightBlue</item>
    </style>


</resources>
