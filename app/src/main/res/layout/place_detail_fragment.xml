<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="placeDetailViewModel"
            type="com.timgeldof.gustfinder.screens.place_detail.PlaceDetailViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Forecast for:"
            android:textSize="24dp" />
        <TextView
            android:id="@+id/txt_place"
            android:fontFamily="@font/quicksand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{placeDetailViewModel.place.area}" />

        <TextView
            android:id="@+id/txt_country"
            android:fontFamily="@font/quicksand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{placeDetailViewModel.place.country}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/forecast_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
    </LinearLayout>




</layout>